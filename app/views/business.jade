article#solutions(ng-show='subView.solutions')
  #row1.container-fluid.container-content
    .row
      .col-md-6.col-md-push-6
        img.img-responsive(ng-src='../images/stock-flowers.png', alt='Image of flowers')
      .col-md-6.col-md-pull-6
        h1.text-pink {{ui.pages.business.solutions.row1.title}}
        p(ng-repeat='content in ui.pages.business.solutions.row1.content') {{content}}
        p
          a.btn.btn-primary(href='#') {{ui.pages.business.solutions.row1.cta}}
  #row2.container-fluid.container-content.container-dark
    .row
      .col-md-6
        img.img-responsive(ng-src='../images/stock-trend-workers.png', alt='Image of trend workers')
      .col-md-6
        h1 {{ui.pages.business.solutions.row2.title}}
        p(ng-repeat='content in ui.pages.business.solutions.row2.content') {{content}}
        p
          a.btn.btn-primary(href='#') {{ui.pages.business.solutions.row2.cta}}
  #row3.container-fluid.container-content
    .row
      .col-md-6.col-md-push-6
        iframe(src='//player.vimeo.com/video/85667492',
        width='500',
        height='213',
        frameborder='0',
        webkitallowfullscreen='webkitallowfullscreen',
        mozallowfullscreen='mozallowfullscreen',
        allowfullscreen='allowfullscreen')
      .col-md-6.col-md-pull-6
        h1.text-pink {{ui.pages.business.solutions.row3.title}}
        p(ng-repeat='content in ui.pages.business.solutions.row3.content') {{content}}
        p
          a.btn.btn-primary(href='#') {{ui.pages.business.solutions.row3.cta}}
  #row4.container-fluid.container-content.container-dark
    .row
      .col-md-6
        img.img-responsive(ng-src='../images/stock-hanging-logos.png', alt='Image of hanging logos')
      .col-md-6
        h1 {{ui.pages.business.solutions.row4.title}}
        p(ng-repeat='content in ui.pages.business.solutions.row4.content') {{content}}
        p
          a.btn.btn-primary(href='#') {{ui.pages.business.solutions.row4.cta}}
          a.btn.btn-cancel(href='#') {{ui.pages.business.solutions.row4.cancel}}



