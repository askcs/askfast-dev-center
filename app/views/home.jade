ng-controller='user')
  .container-fluid
    .navbar-header
      button.navbar-toggle(type='button',
      data-toggle='collapse',
      data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') ASK Developer Center
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        li
          a(href='#') DASHBOARD
        li
          a(href='#') DEVELOPER TOOLS
        li
          a(href='#') HELP
      ul.nav.navbar-nav.navbar-right
        li
          a(href='#') {{user.name}}
