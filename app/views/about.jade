article#sub-about(ng-show='subView.team')

  #row1.container-fluid.container-content.container-gray
    .row
      .content-holder.col-md-6
        h1.text-pink {{ui.pages.about.team.row1.title}}
        p(ng-repeat='content in ui.pages.about.team.row1.content') {{content}}
      .img-holder.col-md-6
        img.img-responsive(ng-src='../images/team-picture.png',
        alt='Image of AskFast team picture')

  #row2.container-fluid.container-content.container-dark
    .row
      .img-holder.col-md-6
        img.img-responsive(ng-src='../images/almende-companies.png',
        alt='Logos of Almende investments')
      .content-holder.col-md-6
        h1 {{ui.pages.about.team.row2.title}}
        p(ng-repeat='content in ui.pages.about.team.row2.content') {{content}}
        p
          a.btn.btn-primary(href='//almende-investments.com')
            | {{ui.pages.about.team.row2.cta}}

  #row3.container-fluid.container-content(ng-show='false')
    .row
      .img-holder.col-md-6.col-md-push-6
        img.img-responsive(ng-src='../images/stock-developer.png',
        alt='Image of developer with laptop')
      .content-holder.col-md-6.col-md-pull-6
        h1.text-pink {{ui.pages.about.team.row3.title}}
        p {{ui.pages.about.team.row3.introduction}}
        ul.bullets
          li(ng-repeat='item in ui.pages.about.team.row3.list')
            a(href='') {{item}}
        p(ng-repeat='content in ui.pages.about.team.row3.content') {{content}}
        p
          a.btn.btn-primary(ng-click='redirectTo("about", "contact")')
            | {{ui.pages.about.team.row3.cta}}


article#sub-contact(ng-show='subView.contact')
  .container-fluid.container-content.container-dark
    .row
      .col-md-12
        script.
          var myLatlng = new google.maps.LatLng(51.907921, 4.452299);
          var mapOptions = {
            zoom: 18,
            center: myLatlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            panControl: true,
            zoomControl: true,
            mapTypeControl: false,
            scaleControl: true,
            streetViewControl: false,
            overviewMapControl: true
          };
          var mapElement = document.getElementById('map');
          var map = new google.maps.Map(mapElement, mapOptions);
          var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Hello World!'
          });
        #map

  .container-fluid.container-content.container-dark
    .row
      .col-md-8.col-md-offset-2.text-center
        h2 We would like to hear from you!
        .row
          .col-md-8.col-md-offset-2
            p.
              Telecommunication solutions...
              Do you want to spend tons of money on people who are trying to.
