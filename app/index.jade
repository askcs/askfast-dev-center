extends layout



block logo
  .col-md-2
    a(href='#home')
      img(src='images/askfast-logo.png', alt='AskFast')



block navbar
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Project name
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='#developers') {{ui.globals.nav.main.developers}}
          li
            a(href='#business') {{ui.globals.nav.main.business}}
          li
            a(href='#dialogs') {{ui.globals.nav.main.dialogs}}
          li
            a(href='#prices') {{ui.globals.nav.main.price}}
          li
            a(href='#about') {{ui.globals.nav.main.aboutUs}}
        ul.nav.navbar-nav.navbar-right
          li
            a(href='#register') {{ui.globals.nav.user.register}}
          li
            a(href='#login') {{ui.globals.nav.user.login}}



