extends layout


block logo
  .col-md-2
    a(href='#home')
      img(src='images/askfast-logo.png', alt='AskFast')


block navbar
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Project name
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='#developers') {{ui.globals.nav.main.developers}}
          li
            a(href='#business') {{ui.globals.nav.main.business}}
          li
            a(href='#dialogs') {{ui.globals.nav.main.dialogs}}
          li
            a(href='#prices') {{ui.globals.nav.main.price}}
          li
            a(href='#about') {{ui.globals.nav.main.aboutUs}}
        ul.nav.navbar-nav.navbar-right
          li
            a(href='#register') REGISTER
          li
            a(href='#login') LOGIN


block nav
  .col-md-8
    ul#nav.list-inline
      li
        a(href='#developers') {{ui.globals.nav.main.developers}}
      li
        span &#183
      li
        a(href='#business') {{ui.globals.nav.main.business}}
      li
        span &#183
      li
        a(href='#dialogs') {{ui.globals.nav.main.dialogs}}
      li
        span &#183
      li
        a(href='#prices') {{ui.globals.nav.main.price}}
      li
        span &#183
      li
        a(href='#about') {{ui.globals.nav.main.aboutUs}}


block user-nav
  .col-md-2.text-right
    ul#user-nav.list-inline
      li
        a(href='#register') REGISTER
      li
        span |
      li
        a(href='#login') LOGIN


block footer
  footer
    .container
      .row
        .col-md-8.col-md-offset-1
          ul#footer-nav.list-inline
            li
              a(href='#about') ABOUT US
            li
              a(href='#jobs') JOBS
            li
              a(href='#legal') LEGAL
            li
              a(href='#contact') CONTACT US
        .col-md-2
          a.pull-right(href='#home')
            img(src='images/askfast-logo.png', alt='AskFast')


block icons
  link(rel='apple-touch-icon-precomposed', sizes='144x144', href='icons/apple-touch-icon-144-precomposed.png')
  link(rel='apple-touch-icon-precomposed', sizes='114x114', href='icons/apple-touch-icon-114-precomposed.png')
  link(rel='apple-touch-icon-precomposed', sizes='72x72', href='icons/apple-touch-icon-72-precomposed.png')
  link(rel='apple-touch-icon-precomposed', href='icons/apple-touch-icon-57-precomposed.png')
  link(rel='shortcut icon', href='/favicon.png')


block tweets
  .col-md-10
    #tweets
      ul
        li
          a(href='#') Virtual Phone numbers are available in Jordan
        li
          a(href='#') Say Hi to our new office in Berlin
        li
          a(href='#') Register for our webinar


block languages
  .col-md-2
    #languages.pull-right
      ul
        li(class="{{(app.language == 'en') && 'active'}}")
          a(ng-click="setLanguage('en')") EN
        li(class="{{(app.language == 'nl') && 'active'}}")
          a(ng-click="setLanguage('nl')") NL


