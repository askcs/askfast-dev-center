extends layout


block brand
  a.navbar-brand(href='#home') ASK-Fast



block main-nav
  ul.nav.navbar-nav
    li(ng-repeat='item in config.app.nav.main',
    class="{{(location.path == '/' + item) && 'active'}}")
      a(ng-href="{{'#' + item}}") {{ui.globals.nav.main[item]}}



block user-nav
  ul.nav.navbar-nav.navbar-right
    li(ng-repeat='item in config.app.nav.user',
    class="{{(location.path == '/' + item) && 'active'}}")
      a(ng-href="{{'#' + item}}") {{ui.globals.nav.user[item]}}



block footer-nav
  ul#footer-nav.list-inline
    li(ng-repeat='item in config.app.nav.footer')
      a(ng-href="{{'#' + item}}") {{ui.globals.nav.footer[item]}}



block navbar
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        block brand
      .collapse.navbar-collapse
        block main-nav
        block user-nav



block footer
  footer
    .container
      .row
        .col-md-8.col-md-offset-1
          block footer-nav
        .col-md-2
          a.pull-right(href='#home')
            img(src='images/askfast-logo.png', alt='AskFast')



block icons
  link(rel='apple-touch-icon-precomposed', sizes='144x144',
  href='icons/apple-touch-icon-144-precomposed.png')
  link(rel='apple-touch-icon-precomposed', sizes='114x114',
  href='icons/apple-touch-icon-114-precomposed.png')
  link(rel='apple-touch-icon-precomposed', sizes='72x72',
  href='icons/apple-touch-icon-72-precomposed.png')
  link(rel='apple-touch-icon-precomposed',
  href='icons/apple-touch-icon-57-precomposed.png')
  link(rel='shortcut icon', href='/favicon.png')



block tweets
  #tweets.col-md-10
      ul
        li
          a(href='#') Virtual Phone numbers are available in Jordan
        li
          a(href='#') Say Hi to our new office in Berlin
        li
          a(href='#') Register for our webinar



block sub-header-menu
  #sub-header-menu.col-md-10
    ul.sub-header-menu
      li.active
        a(ng-click="") FastStart
      li
        a(ng-click="") Devmods
      li
        a(ng-click="") Documents



block languages
  #languages.col-md-2
    ul.sub-header-menu.pull-right
      li(class="{{(app.language == 'en') && 'active'}}")
        a(ng-click="setLanguage('en')") EN
      li(class="{{(app.language == 'nl') && 'active'}}")
        a(ng-click="setLanguage('nl')") NL



