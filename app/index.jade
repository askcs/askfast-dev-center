block footer
  footer
    .container
      .row
        .col-md-8.col-md-offset-1
          ul#footer-nav.list-inline
            li
              a(href='#about') {{ui.globals.nav.main.aboutUs}}
            li
              a(href='#jobs') {{ui.globals.nav.footer.jobs}}
            li
              a(href='#legal') {{ui.globals.nav.footer.legal}}
            li
              a(href='#contact') {{ui.globals.nav.footer.contact}}
        .col-md-2
          a.pull-right(href='#home')
            img(src='images/askfast-logo.png', alt='AskFast')



